<body class="text-center">

  <main class="form-signin">

    <form action="/signUp" method="POST"> 
      <img class="mb-4 imgLogo" src="/img/logoLG.png" alt="" width="80" height="80">
      <h1 class="h3 mb-3 fw-normal">Sign Up</h1>

      <!-- flash-connect -->
      <% if (signupMessage.length > 0 ) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong> <%= signupMessage %> </strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <div class="form-floating">
        <input name="username" required type="text" class="form-control" id="floatingInputsername" >
        <label for="floatingInputUsername">Username</label>
      </div>

      <div class="form-floating">
        <input name="email" required type="text" class="form-control" id="floatingInput">
        <label for="floatingInput">Email address</label>
      </div>

      <div class="form-floating">
        <input name="password" required type="password" class="form-control" id="floatingPassword" >
        <label for="floatingPassword">Password</label>
      </div>

      <div class="form-floating mt-4 mb-4">
        ¿Ya tienes una cuenta? <a href="/signin">Ingresa aquí.</a>
      </div>

      <button class="w-100 btn btn-lg rounded-pill btn-outline-primary" type="submit">Send</button>

      <p class="mt-5 mb-3 text-muted"> erik_larre &copy; Software development 2021</p>

    </form>

  </main>

